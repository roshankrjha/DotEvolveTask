                  <div class="alert alert-danger" role="alert">
                    <%= error %>
                  </div>
                <% } %>
                <div class="form-outline mb-4">
                    <p class="form-control form-control-lg"><%= username %></p>
                </div>
                <div class="form-outline mb-4">
                    <p class="form-control form-control-lg"><%=  useremail %></p>
                </div>  
            </div>
          </div>
        </div>
      </div>
    </div>
</section>
